{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "node"
	},
	"exclude": [
		"coverage",
		"jsdoc2md",
		"node_modules"
	]
}
